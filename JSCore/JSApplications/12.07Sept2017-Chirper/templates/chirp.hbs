<article id="{{chirpId}}" class="chirp">
    <div class="titlebar">
        <a href="#/profile/:{{author}}" class="chirp-author">{{author}}</a>

        <span class="chirp-time">
            {{#if isAuthor}}
                <a href="#/delete/:{{chirpId}}">delete</a>
            {{/if}}
            {{time}}
        </span>
    </div>
    <p>{{text}}</p>
</article>