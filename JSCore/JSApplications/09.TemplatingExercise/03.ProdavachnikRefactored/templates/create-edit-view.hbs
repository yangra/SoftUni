<section id="{{viewType}}" class="{{viewType}}">
    <h1 class="titleForm">{{formTitle}}</h1>
    <form id="{{formType}}" class="form">

        <div><input type="hidden" name="id" value ="{{id}}" required /></div>
        <div><input type="hidden" name="publisher" value="""{{publisher}}" required /></div>

        <div>Title:</div>
        <div><input type="text" name="title" required value="{{title}}" /></div>
        <div>Description:</div>
        <div><textarea name="description" rows="10" required>{{description}}</textarea></div>
        <div>Date Published:</div>
        <div><input type="date" name="datePublished" value="{{datePublished}}" required /></div>
        <div>Price:</div>
        <div><input type="number" step="0.01" name="price" value="{{price}}" required /></div>
        <div>Image:</div>
        <div><input type="text" name="image" value="{{imagePath}}" required /></div>
        <div><input type="button" id="{{buttonType}}" value="{{value}}" /></div>
    </form>
</section>